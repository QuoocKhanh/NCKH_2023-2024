@{

    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div style="display:flex">
                <div>
                    <h4 class="card-title">Advisor Info</h4>
                </div>
                <div class="dropdown" style="margin-left:auto">
                    <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuIconButton1" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="ti-heart"></i>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuIconButton1">
                        <h6 class="dropdown-header">Settings</h6>
                        <a class="dropdown-item" href="/Admin/Advisor/Create">Add New</a>                       
                    </div>
                </div>
                
            </div>
            <div class="table-responsive">
                <table class="table table-light">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> Name </th>
                            <th> Academic Rank </th>
                            <th> Degree </th>
                            <th> Option </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                                <td> @item.Advisor_ID </td>
                                <td> @item.AdvisorName </td>
                                <td> @item.AR </td>
                                <td> @item.Degree </td>
                                <td>
                                    <a class="btn btn-warning waves-effect" href="/Admin/Advisor/Update/@item.Advisor_ID">Edit</a>
                                    <a class="btn btn-danger waves-effect" href="/Admin/Advisor/Delete/@item.Advisor_ID" onclick="return window.confirm('Are you sure?');">Delete</a>
                                </td>
                        </tr>      
                        }
                    </tbody>
                </table>
                <div class="btn-group" style="padding-top: 15px;" role="group" aria-label="Basic example">
                    @for (int i = 1; i <= Model.PageCount; i++)
                    {
                        <button type="button" class="btn btn-outline-dark btn-fw" onclick="location.href='@Url.Action("Index", new { page = i })'">@i</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
