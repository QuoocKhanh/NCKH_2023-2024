@{

    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}
@using NCKH.Models;   
@functions {
    public MyDbContext db = new MyDbContext();
}



<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create New</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data" action="@ViewBag.action">
                <div class="form-group">
                <label for="exampleInputName1">Advisor Name</label>
                    <input type="text" name="name" class="form-control" id="exampleInputName1" placeholder="Name" >
                </div>
                <div class="form-group">
                <label for="exampleInputEmail3">Academic Rank</label>
                    <input type="text" name="AR" class="form-control" id="exampleInputEmail3" placeholder="Academic Rank" >
                </div>
                <div class="form-group">
                <label for="exampleInputPassword4">Degree</label>
                    <input type="text" name="degree" class="form-control" id="exampleInputPassword4" placeholder="Degree" >
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Gender</label>
                    <input type="text" name="gender" class="form-control" id="exampleInputPassword4" placeholder="Gender" />
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Dob</label>
                    <input type="date" name="Dob" class="form-control" id="exampleInputPassword4" placeholder="Date of birth" />
                   
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Email</label>
                    <input type="email" name="email" class="form-control" id="exampleInputPassword4" placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Phone Number</label>
                    <input type="number" name="pnumber" class="form-control" id="exampleInputPassword4" placeholder="Phone Number">
                </div>
            
                <button type="submit" class="btn btn-primary mr-2" value="Upload">Submit</button>
                
            </form>
            
        </div>
    </div>
</div>
