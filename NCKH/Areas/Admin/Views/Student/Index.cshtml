@{

    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var advisor_id = HttpContextAccessor.HttpContext.Session.GetString("advisor_id");
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div style="display:flex">  
                <div >
                    <h4 class="card-title">Management Student Info</h4>
                </div>  
                <div class="dropdown" style="margin-left:auto">
                    <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuIconButton1" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="ti-heart"></i>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuIconButton1">
                        <h6 class="dropdown-header">Settings</h6>
                        <a class="dropdown-item" href="/Admin/Student/CreateExcel">Add File Excel</a>
                        <a class="dropdown-item" href="/Admin/Student/Create">Add new student</a>
                    </div>
                </div>              
            </div>

            <div class="table-responsive" style="padding-top:20px">
                <table class="table table-light">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> Student Code </th>
                            <th> Name </th>
                            <th> Role </th> 
                            <th>Note</th>
                            <th> Option </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(Model != null)
                        {
                            @foreach (var item in Model)
                                {
                                <tr>
                                    <td> @item.Student_ID </td>
                                    <td> @item.StudentCode </td>
                                    <td> @item.StudentName </td>
                                    <td> @item.Role </td>
                                    <td> @item.Note </td>
                                    <td>
                                        <a class="btn btn-warning waves-effect" href="/Admin/Student/Update/@item.Student_ID">Edit</a>
                                        <a class="btn btn-danger waves-effect" href="/Admin/Student/Delete/@item.Student_ID" onclick="return window.confirm('Are you sure?');">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                        <tr>
                            <td> </td>
                            <td> </td>
                            <td> </td>
                            <td> </td>
                            <td> </td>
                        </tr>
                        }
                                                           
                   </tbody>
                </table>
                <div class="btn-group" style="padding-top: 15px;" role="group" aria-label="Basic example">
                    @for (int i = 1; i <= Model.PageCount; i++)
                    {
                        <button type="button" class="btn btn-outline-dark btn-fw" onclick="location.href='@Url.Action("Detail", new { page = i })'">@i</button>
                    }
                </div>
               
            </div>
        </div>
    </div>
</div>