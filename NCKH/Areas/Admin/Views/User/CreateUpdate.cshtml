@{

    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}
@using NCKH.Models;

@functions {
    public MyDbContext db = new MyDbContext();
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"></h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data" action="@ViewBag.action">
                <div class="form-group">
                    <label for="exampleInputName1">User Name</label>
                    <input type="text" name="name" class="form-control" id="exampleInputName1" placeholder="Name" value="@if(Model != null){
                    <text>@Model.UserName</text>
                    }">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Password</label>
                    <input type="text" name="pass" class="form-control" id="exampleInputEmail3" placeholder="Password" value="@if(Model != null){
                    <text>@Model.Password</text>
                    }">
                </div>               
                <div class="form-group">
                    <label for="exampleInputPassword4">Gender</label>
                    <input type="text" name="gender" class="form-control" id="exampleInputPassword4" placeholder="Gender" value="@if(Model != null){
                    <text>@Model.Gender</text>
                    }">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Dob</label>
                    <input type="date" name="Dob" class="form-control" id="exampleInputPassword4" placeholder="Date of birth" value="@if(Model != null){
                    <text>@Model.Dob</text>
                    }">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Email</label>
                    <input type="email" name="email" class="form-control" id="exampleInputPassword4" placeholder="Email" value="@if(Model != null){
                    <text>@Model.Email</text>
                    }">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Phone Number</label>
                    <input type="number" name="pnumber" class="form-control" id="exampleInputPassword4" placeholder="Phone Number" value="@if(Model != null){
                    <text>@Model.Phone</text>
                    }">
                </div>
               

                <button type="submit" class="btn btn-primary mr-2" value="Upload">Submit</button>
                @* <button class="btn btn-dark" href="/Admin/User">Cancel</button> *@
            </form>
        </div>
    </div>
</div>

