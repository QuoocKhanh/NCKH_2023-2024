@{

    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div style="display:flex">
                <div>
                    <h4 class="card-title">Management User Info</h4>
                </div>
                <div class="dropdown" style="margin-left:auto">
                    <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuIconButton1" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="ti-heart"></i>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuIconButton1">
                        <h6 class="dropdown-header">Settings</h6>
                        <a class="dropdown-item" href="/Admin/User/Create">Add new user</a>
                    </div>
                </div>
                
            </div>
            <div class="table-responsive">
                <table class="table table-light">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> UserName </th>
                            <th> PassWord </th>
                            <th> Gender </th>
                            <th> Date of birth </th>
                            <th> Phone Number </th>
                            <th> Email </th>
                            <th> Type </th>
                            <th> Option </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @item.User_ID </td>
                                    <td> @item.UserName </td>
                                    <td> @item.Password </td>
                                    <td> @item.Gender </td>
                                    <td> @item.Dob </td>
                                    <td> @item.Phone </td>
                                    <td> @item.Email </td>
                                    <td>
                                        @if (item.Type == 0)
                                        {
                                            <text>Admin</text>
                                        }
                                        @if (item.Type == 1)
                                        {
                                            <text>Advisor</text>
                                        }
                                        @if (item.Type == 2)
                                        {
                                            <text>Student</text>
                                        }
                                        
                                    </td>
                                    <td>
                                        <a class="btn btn-warning waves-effect" href="/Admin/User/Update/@item.User_ID">Edit</a>
                                        <a class="btn btn-danger waves-effect" href="/Admin/User/Delete/@item.User_ID" onclick="return window.confirm('Are you sure?');">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td> </td>
                                <td> </td>
                                <td> </td>
                                <td> </td>
                                <td> </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <div class="btn-group" style="padding-top: 15px;" role="group" aria-label="Basic example">
                    @for (int i = 1; i <= Model.PageCount; i++)
                    {
                        <button type="button" class="btn btn-outline-dark btn-fw" onclick="location.href='@Url.Action("Index", new { page = i })'">@i</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>